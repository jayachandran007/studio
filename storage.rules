
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to the chat_images directory
    match /chat_images/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Allow public read access to all files in chat_images
    match /chat_images/{allPaths=**} {
      allow read;
    }
  }
}
