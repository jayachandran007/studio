rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow writes to the chat_images folder for any authenticated user
    match /chat_images/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Allow anyone to read images, as the URLs are public anyway
    match /chat_images/{allPaths=**} {
      allow read;
    }
  }
}
