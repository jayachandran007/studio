rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Messages can be read and written by any authenticated user.
    // Users can only delete their own messages.
    match /messages/{messageId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.sender == request.auth.uid;
    }

    // FCM tokens can be written by the user they belong to.
    // Only the server should be able to read these tokens.
    match /fcmTokens/{userId} {
      allow read: if false; // Server-side access only
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
